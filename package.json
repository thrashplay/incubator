  },
  "resolutions": {
    "@babel/cli": "7.10.5",
    "@babel/core": "7.10.5",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-export-default-from": "7.5.2",
    "@babel/plugin-proposal-object-rest-spread": "7.11.0",
    "@babel/preset-env": "7.11.0",
    "@babel/preset-typescript": "7.6.0",
    "husky": "4.2.5",
    "react": "16.9.0",
    "react-dom": "16.13.1",
    "react-native": "0.61.5",
    "typescript": "3.8.3"
  }
}
