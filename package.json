{
  "name": "@thrashplay/incubator-node",
  "version": "0.0.1",
  "description": "Prototypes, experiments, and early release of Thrashplay Node projects.",
  "author": "Sean Kleinjung",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/node/devops/config-version-helper",
      "packages/node/ringlet/haul-config-helpers",
      "packages/node/sophia/*",
      "packages/node/thrashlib/*"
    ]
  },
  "scripts": {
    "bootstrap": "npx lerna bootstrap",
    "build": "yarn npm-run-all _build:prepare-tools --parallel _build:types _build:js",
    "build:clean": "run-s clean build",
    "build:dev": "yarn _build:ts-config && yarn run-p _build:types _build:js:dev",
    "build:watch": "yarn _build:ts-config && yarn run-p _build:watch:js _build:watch:types",
    "clean": "rm -rf packages/node/*/*/dist && rm -rf packages/node/*/*/lib && rm -rf packages/node/*/*/tsconfig.build.tsbuildinfo && rm -f tsconfig.build.tsbuildinfo",
    "clean:all": "yarn clean && yarn _clean:ts-config && yarn _clean:node_modules",
    "emulator:android": "bash -c \"emulator -avd $(emulator -list-avds | head -n 1)\"",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --fix --ext .ts,.js",
    "publish:tagged": "yarn lerna publish from-git",
    "reset": "yarn clean:all && yarn && yarn bootstrap && yarn build",
    "sophia": "yarn sophia:android",
    "sophia:android": "yarn _build:prepare-tools && yarn workspace @thrashplay/sophia-native dev:android",
    "sophia:install:android": "yarn workspace @thrashplay/sophia-native install:android",
    "sophia:ios": "yarn _build:prepare-tools && yarn workspace @thrashplay/sophia-native dev:ios",
    "sophia:web": "yarn _build:prepare-tools && yarn workspace @thrashplay/sophia-web dev",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "version:graduate": "yarn lerna version --conventional-graduate",
    "_build:js": "lerna exec --stream --ignore @thrashplay/sophia-storybook-web --ignore @thrashplay/sophia-web --ignore @thrashplay/webpack-utils -- babel --root-mode upward src --out-dir lib --extensions .ts,.tsx,.js.jsx",
    "_build:js:dev": "lerna run --parallel build:dev",
    "_build:prepare-tools": "lerna exec --scope @thrashplay/webpack-utils -- babel --root-mode upward src --out-dir lib --extensions .ts,.tsx,.js.jsx",
    "_build:types": "tsc --build tsconfig.build-types.json",
    "_build:watch:js": "lerna exec --parallel -- webpack --watch --env.name dev",
    "_build:watch:types": "tsc --build tsconfig.build-types.json --watch",
    "_clean:node_modules": "rm -rf node_modules && rm -rf packages/node/*/*/node_modules",
    "_clean:ts-config": "rm -f packages/node/*/*/tsconfig.json",
    "postinstall": "patch-package"
  },
  "eslintConfig": {
    "extends": "airbnb-base"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "yarn lint:fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.6.2",
    "@babel/core": "7.10.5",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-export-default-from": "7.5.2",
    "@babel/plugin-proposal-object-rest-spread": "7.6.2",
    "@babel/preset-env": "7.6.2",
    "@babel/preset-react": "7.6.3",
    "@babel/preset-typescript": "7.6.0",
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@haul-bundler/babel-preset-react-native": "0.16.0",
    "@haul-bundler/cli": "0.22.1",
    "@haul-bundler/preset-0.60": "0.18.0",
    "@react-native-community/eslint-config": "0.0.5",
    "@react-native-community/masked-view": "0.1.9",
    "@react-navigation/drawer": "5.4.1",
    "@react-navigation/material-bottom-tabs": "5.1.8",
    "@react-navigation/native": "5.1.5",
    "@react-navigation/stack": "5.2.10",
    "@storybook/addon-actions": "5.3.18",
    "@storybook/addon-links": "5.3.18",
    "@storybook/addons": "5.3.18",
    "@storybook/react": "5.3.18",
    "@svgr/webpack": "5.4.0",
    "@types/color": "3.0.1",
    "@types/jest": "24.0.23",
    "@types/js-yaml": "3.12.3",
    "@types/lodash": "4.14.149",
    "@types/node": "12.12.15",
    "@types/react": "16.9.19",
    "@types/react-dom": "16.9.6",
    "@types/react-native": "0.61.5",
    "@types/react-native-vector-icons": "6.4.5",
    "@types/react-redux": "7.1.7",
    "@types/yargs": "15.0.4",
    "@typescript-eslint/eslint-plugin": "2.3.0",
    "@typescript-eslint/parser": "2.3.0",
    "babel-jest": "24.9.0",
    "babel-loader": "8.1.0",
    "babel-plugin-dev-expression": "0.2.2",
    "css-loader": "3.5.1",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "eslint": "6.5.1",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-flowtype": "4.3.0",
    "eslint-plugin-import": "2.18.2",
    "glob": "7.1.6",
    "husky": "4.2.5",
    "jest": "24.9.0",
    "jest-enzyme": "7.1.2",
    "jest-extended": "0.11.5",
    "jsdom": "16.2.2",
    "lerna": "3.20.2",
    "lint-staged": "9.3.0",
    "lodash": "4.17.19",
    "metro-react-native-babel-preset": "0.56.0",
    "npm-run-all": "4.1.5",
    "patch-package": "6.2.0",
    "react-dom": "16.13.1",
    "react-native-dev-menu": "4.0.0",
    "react-native-gesture-handler": "1.6.1",
    "react-native-reanimated": "1.8.0",
    "react-native-safe-area-context": "0.7.3",
    "react-native-screens": "2.4.0",
    "react-native-svg": "12.1.0",
    "react-native-tab-view": "2.14.0",
    "react-native-vector-icons": "6.6.0",
    "react-native-web-image-loader": "0.0.7",
    "redux-devtools": "3.5.0",
    "shx": "0.3.2",
    "stmux": "1.8.0",
    "style-loader": "1.1.3",
    "ts-jest": "24.2.0",
