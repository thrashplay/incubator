{
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(publish): Promote latest versions [ci skip]."
    },
    "version": {
      "allowBranch": ["master", "develop"],
      "conventionalCommits": true
    }
  },
  "ignore-changes": [
    "**/*.md",
    "**/*.test.ts",
    "**/_templates/**"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [ 
    "packages/node/devops/config-version-helper",
    "packages/node/gemstone/*",
    "packages/node/hexmarch/*",
    "packages/node/ringlet/haul-config-helpers",
    "packages/node/sophia/*",
    "packages/node/thrashlib/*"
  ],
  "version": "independent"
}
