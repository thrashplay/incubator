{
  "name": "@thrashplay/incubator-node",
  "version": "0.0.1",
  "description": "Prototypes, experiments, and early release of Thrashplay Node projects.",
  "author": "Sean Kleinjung",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "projects/genotype/*",
      "projects/ringlet/haul-config-helpers",
      "projects/thrashlib/*"
    ]
  },
  "scripts": {
    "bootstrap": "yarn && yarn lerna bootstrap",
    "build": "yarn run-p _build:types _build:js",
    "build:clean": "run-s clean build",
    "build:dev": "yarn _build:ts-config && yarn run-p _build:types _build:js:dev",
    "build:watch": "yarn _build:ts-config && yarn run-p _build:watch:js _build:watch:types",
    "clean": "rm -rf projects/*/*/dist && rm -rf projects/*/*/lib && rm -rf projects/*/*/tsconfig.build.tsbuildinfo && rm -f tsconfig.build.tsbuildinfo",
    "clean:all": "yarn clean && yarn _clean:ts-config && yarn _clean:node_modules",
    "emulator:android": "bash -c \"emulator -avd $(emulator -list-avds | head -n 1)\"",
    "genotype": "yarn genotype:android",
    "genotype:android": "yarn stmux -- [ [ \"yarn emulator:android\" .. \"yarn workspace @thrashplay/genotype-storybook start\" ] : \"yarn workspace @thrashplay/genotype-native start\" ]",
    "genotype:ios": "echo iOS support not implemented yet",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --fix --ext .ts,.js",
    "publish:tagged": "yarn lerna publish from-git",
    "reset": "yarn clean:all && yarn && yarn bootstrap && yarn build",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "version:graduate": "yarn lerna version --conventional-graduate",
    "_build:js": "lerna exec --stream -- node ../../../build-lib/thrashpack.js",
    "_build:js:dev": "lerna run --parallel build:dev",
    "_build:types": "tsc --build tsconfig.build-types.json",
    "_build:watch:js": "lerna exec --parallel -- webpack --watch --env.name dev",
    "_build:watch:types": "tsc --build tsconfig.build-types.json --watch",
    "_clean:node_modules": "rm -rf node_modules && rm -rf projects/*/*/node_modules",
    "_clean:ts-config": "rm -f projects/*/*/tsconfig.json",
    "postinstall": "patch-package"
  },
  "eslintConfig": {
    "extends": "airbnb-base"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "yarn lint:fix",
      "git add",
      "yarn test --bail --findRelatedTests"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.8.4",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-export-default-from": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.8.3",
    "@babel/preset-env": "7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "7.8.3",
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.15",
    "@types/react": "16.9.19",
    "@types/react-native": "0.61.2",
    "@typescript-eslint/eslint-plugin": "2.3.0",
    "@typescript-eslint/parser": "2.3.0",
    "babel-jest": "24.9.0",
    "babel-loader": "8.0.6",
    "eslint": "6.4.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-flowtype": "4.3.0",
    "eslint-plugin-import": "2.18.2",
    "glob": "7.1.6",
    "haul": "1.0.0-rc.15",
    "husky": "3.0.5",
    "jest": "24.9.0",
    "lerna": "3.19.0",
    "lint-staged": "9.3.0",
    "lodash": "4.17.15",
    "metro-react-native-babel-preset": "0.45.0",
    "npm-run-all": "4.1.5",
    "patch-package": "6.2.0",
    "react-dom": "16.12.0",
    "shx": "0.3.2",
    "stmux": "1.8.0",
    "ts-jest": "24.2.0",
    "ts-loader": "6.2.1",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "typescript": "3.8.1-rc",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10",
    "webpack-merge": "4.2.2",
    "webpack-node-externals": "1.7.2"
  },
  "resolutions": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.8.4",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/plugin-proposal-export-default-from": "7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "7.8.3",
    "@babel/preset-env": "7.8.4",
    "@babel/preset-typescript": "7.8.3",
    "haul": "1.0.0-rc.15",
    "husky": "3.0.5",
    "react": "16.9.0",
    "react-dom": "16.12.0",
    "react-native": "0.61.5",
    "typescript": "3.8.1-rc"
  }
}
