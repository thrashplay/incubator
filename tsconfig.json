{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./packages/node",
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "jsx": "preserve",
    "lib": ["es2017"],
    "listEmittedFiles": false,
    "listFiles": false,
    "module": "ES2015",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "paths": {
      "@ringlet/*": ["ringlet/*/src"],
      "@thrashplay/webpack-utils": ["thrashlib/webpack-utils/lib"],
      "@thrashplay/gemstone-*": ["gemstone/*/src"],
      "@thrashplay/hexmarch-*": ["hexmarch/*/src"],
      "@thrashplay/sophia-*": ["sophia/*/src"],
      "@thrashplay/*": ["thrashlib/*/src"]
    },
    "noUnusedParameters": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es2017",
    "traceResolution": false,
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ]
  },
  "exclude": [
    "**/dist",
    "**/lib",
    "**/node_modules/"
  ]
}
